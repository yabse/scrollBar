<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page_2_Welcome"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="73dp"
        android:text="Welcome"
        android:textSize="24dp"

        android:textColor="@color/purple_gridient"
        android:fontFamily="@font/poppins_bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="88dp"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="become a member of  our platform"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="52dp"
        android:layout_marginTop="29dp"


        />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:fontFamily="@font/poppins_regular"
        android:ems="10"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:background="@drawable/input"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:ems="0"
        android:paddingStart="16dp"
        android:textSize="24dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/input"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:paddingStart="16dp"
        android:textSize="24dp"
        android:background="@drawable/input"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"        />

    <Button
        android:id="@+id/button_signUp"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="35dp"
        android:text="Sign up"
        android:background="@drawable/button_curve"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        >
        <View
            android:layout_width="155dp"
            android:layout_height="1dp"
            android:background="@color/light_white"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with"
            android:layout_marginStart="10dp"
            android:textColor="@color/light_white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_white"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="33dp"
        >
        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/google"
            />

        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="84dp"
            android:background="@drawable/facebook"
            />
        <ImageButton
            android:id="@+id/btn_apple"

            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="79dp"
            android:background="@drawable/applelogo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="79dp"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Already have an account?" />

        <TextView
            android:id="@+id/button_logIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Log in"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/purple_gridient"

            />


    </LinearLayout>


</LinearLayout>