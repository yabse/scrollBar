<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile_2_Fragment"
    android:id="@+id/profile_2_Fragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ingridient_of_home"
                android:orientation="vertical"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:text="@string/Back"
                    android:background="@drawable/transparent"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_left_24"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="31dp"
                    android:gravity="center"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/rectangle324"
                        app:civ_border_width="3dp"
                        app:civ_border_color="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"

                        android:text="@string/liya_dereje"
                        android:textColor="@color/white"
                        android:textSize = "20sp"
                        android:fontFamily="@font/poppins_medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="@string/liya_dereje2_gmail_com"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"

                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="0dp"
                        >
                        <Button
                            android:id="@+id/edit_btn2"
                            android:layout_width="109dp"
                            android:layout_height="40dp"
                            android:textSize="10sp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/Edit_profile"
                            android:textColor="@color/white"
                            android:background="@drawable/edit_button_2"

                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"

            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:orientation="horizontal"
                    android:paddingTop="25dp"

                    >
                    <View
                        android:layout_width="44dp"
                        android:layout_height="1dp"
                        android:background="@color/light_white"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting"
                        android:textColor="@color/light_white"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="7dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_white"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="7dp"
                        />
                </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="0dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/ic_baseline_notifications_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/notification"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/_4"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="74dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@color/light_white_for_scroll"
                                    android:orientation="horizontal"

                                    >

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="40dp"
                                        android:layout_marginTop="15dp"
                                        android:background="@drawable/ic_baseline_notifications_24"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="70dp"
                                        android:layout_marginTop="20dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Report"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="175dp"
                                        android:layout_marginTop="20dp"
                                        android:text="2"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"

                                        />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_notifications_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Reports"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/Reports_num"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_email_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="2"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_notifications_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"                        android:layout_height="wrap_content"
                                    android:text="@string/Security_and_Policy"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/two"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_notifications_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"                        android:layout_height="wrap_content"
                                    android:text="@string/Terms_of_Service"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/Terms_of_Service_num"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_notifications_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Accessibility"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/Accessibility_num"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="74dp"
                                android:orientation="horizontal"
                                android:background="@color/light_white_for_scroll"
                                android:layout_marginTop="10dp"

                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="40dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/ic_baseline_login_24"
                                    />
                                <TextView
                                    android:layout_width="153dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/log_out"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginStart="70dp"
                                    android:layout_marginTop="20dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:text="@string/log_out_num"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginStart="60dp"

                                    />
                            </LinearLayout>



                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>




</LinearLayout>